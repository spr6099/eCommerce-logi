<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">

    <div class="row d-flex justify-content-center align-items-center h-100">

      <div class="col">
        <div class="card">
          <div class="card-body p-4">

            <div class="row">

              <h2>Cart</h2>
              <div class="col-lg-7">
                <h5 class="mb-3"><a href="#!" class="text-body">
                    {{!-- <i class="fas fa-long-arrow-alt-left me-2">
                    </i>Continue shopping --}}
                  </a></h5>
                <hr>

                <div class="d-flex justify-content-between align-items-center mb-4">
                  <div>
                    <p class="mb-1">Shopping cart</p>
                    <p class="mb-0">You have
                      {{carts.length}}
                      items in your cart</p>
                  </div>
                  <div>
                    <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i
                          class="fas fa-angle-down mt-1"></i></a></p>
                  </div>
                </div>

                {{#each carts}}
                <div class="card mb-3 mb-lg-0">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <div class="d-flex flex-row align-items-center">
                        <div>
                          {{!-- <input type="text" value="{{this.product}}" id="product"> --}}
                          <img src="/images/admin/product/{{this.productLookup.image}}" class="img-fluid rounded-3"
                            alt="Shopping item" style="width: 100px; height:100px">
                        </div>
                        <div class="ms-3">
                          <h5>{{this.productLookup.prodName}}</h5>
                          <p class="small mb-0">256GB, Navy Blue</p>
                        </div>
                      </div>
                      <div class="d-flex flex-row align-items-center">
                        <div style="width: 50px;">
                          <h5 class="fw-normal mb-0">1</h5>
                        </div>
                        <div style="width: 80px;">
                          <input type="hidden" class="price" id="price" value="{{this.productLookup.price}}">
                          <h5 id="price" class="mb-0">{{this.productLookup.price}}</h5>
                        </div>
                        <div style="width: 80px;">
                          <a href="/deleteCart/{{this._id}}"><button class="btn" type="submit">x</button> </a>
                        </div>

                        <a href="#!" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
                {{/each}}


              </div>
              <div class="col-lg-5">
                <div class="card m-5" style="width: 18rem;">
                  {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
                  <div class="card-body">
                    <h5 class="card-title">Payments</h5>
                    <p class="card-text">Total items ={{carts.length}}</p>
                    <p class="card-text">Total price = {{total}}</p>
                    
                    <a href="/order" class="btn btn-primary">Order & Buy</a>
                    
                  </div>
                </div>


              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>




<p id="demo"></p>

<script>
  let total = 0;
  let carts = carts;
  for (let i = 0; i < carts.length; i++) {
    // text += "The number is " + i + "<br>";
    total += parseInt(carts[i].productLookup.price);

  }
  console.log(total)

  document.getElementById("demo").innerHTML = total;
</script>


